{% extends "::base.html.twig" %}

{% block title %}{{ company.name }} - AddressBook{% endblock %}

{% block body %}
  <h2 class="mt-4 mb-3">{{ company.name }}</h2>

  {% if company.city %}
    <div class="row mb-2">
      <div class="col-md-2">
        <b>City</b>
      </div>
      <div class="col-md-10">
        {{ company.city }}
      </div>
    </div>
  {% endif %}

{% endblock %}
